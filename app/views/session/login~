	<% @session = SessionController.new %>		
	<% if params[:commit] == "Login" %>
		<% @session.set_credentials(params) %>		
		<% params[:message] = @session.login %>
	<% else %>
		<% @session.set_register_data(params) %>
		<% params[:message] = @session.create_user %>
	<% end %>
	<% if @session.isOpen? %>
		<% if @session.new_user? %>
			<% params[:user_id] = @session.get_user_id %>
			<%= render :file => 'partials/_first_login' %>
		<% else %>
			<% params[:user_id] = @session.get_user_id %>
			<%= render :file => "partials/_home" %>
		<% end %>
	<% end %>
<% end %>

